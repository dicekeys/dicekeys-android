<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dicekeys.testapp">

    <uses-permission android:name="android.permission.CAMERA" />

    <!-- for writing to USB FIDO keys -->
    <uses-feature android:name="android.hardware.usb.host" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <!-- end for writing to USB FIDO keys -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="DiceKeys API Test App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.dicekeys.testapp.MainActivity" android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="web-filter">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="test-app.dicekeys.org"
                    android:pathPrefix="/api"
                    />
            </intent-filter>
        </activity>
    </application>

</manifest>
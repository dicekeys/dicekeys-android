<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="diceKey"
            type="org.dicekeys.app.encryption.EncryptedDiceKey" />

        <variable
            name="isOpened"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <org.dicekeys.app.views.DiceKeyCenterFaceOnlyView
            android:id="@+id/centerView"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Center"
            android:textAlignment="center"
            android:text= "@{String.format(isOpened ? @string/open_dicekey_with_center : @string/unlock_dicekey_with_center, diceKey.centerFaceAsFace.toHumanReadableForm(false))}"
            android:textAppearance="?attr/textAppearanceHeadline6" />

    </LinearLayout>



</layout>

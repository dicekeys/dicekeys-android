<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.DiceKeys" parent="Base.Theme.DiceKeys"/>
    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.DiceKeys" parent="Base.Theme.MaterialThemeBuilder">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/alexandrasBlue</item>
        <item name="colorPrimaryVariant">@color/alexandrasBlueLighter</item>
        <item name="colorSecondary">@color/alexandrasBlue</item>
        <item name="colorSecondaryVariant">@color/alexandrasBlueLighter</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.DiceKeys.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DiceKeys.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.DiceKeys.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.DiceKeys.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.DiceKeys.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.DiceKeys.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DiceKeys.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.DiceKeys.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DiceKeys.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DiceKeys.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.DiceKeys.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DiceKeys.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.DiceKeys.Overline</item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="toolbarStyle">@style/Widget.DiceKeys.Toolbar</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
    </style>

</resources>